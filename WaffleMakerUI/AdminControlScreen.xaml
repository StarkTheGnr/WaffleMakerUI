        <Label x:Name="lblTitle" Content="Admin Panel" HorizontalAlignment="Center" Margin="0,57,0,0" VerticalAlignment="Top" FontSize="36" FontWeight="Bold"/>
        <Label x:Name="lblWarning" Content="*If you are not the machine administrator, please press the Back button." HorizontalAlignment="Center" Margin="0,104,0,0" VerticalAlignment="Top" FontSize="16" FontStyle="Italic"/>
        <Button x:Name="lblConfirm" Content="Confirm Changes" HorizontalAlignment="Center" Margin="296,469,296,0" VerticalAlignment="Top" Width="200" Height="95" Background="White" FontSize="20"/>
        <Button x:Name="lblDiscard" Content="Discard Changes" HorizontalAlignment="Center" Margin="296,602,296,0" VerticalAlignment="Top" Width="200" Height="95" Background="White" FontSize="20"/>

    </Grid>
</Window>
