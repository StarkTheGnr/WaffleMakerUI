<Window x:Class="WaffleMakerUI.ErrorScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WaffleMakerUI"
        mc:Ignorable="d"
        Title="ErrorScreen" Height="800" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Label Content="There was an error with the process. Please take your money back." HorizontalAlignment="Center" Margin="0,298,0,0" VerticalAlignment="Top" FontSize="22"/>
        <Button x:Name="btnBack" HorizontalAlignment="Left" VerticalAlignment="Top" Background="{x:Null}" BorderBrush="{x:Null}" Click="btnBack_Click">
            <Image x:Name="imgBack" HorizontalAlignment="Left" Height="62" VerticalAlignment="Top" Width="66" Source="Back-Arrow-Icon-PNG.png"/>
        </Button>
    </Grid>
</Window>
